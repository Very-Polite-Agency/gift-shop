{%- liquid

  assign section_name = 'featured-collection'
  assign section_id = section_name | append: '--' | append: section.id
  assign section_classes = section_name | append: ' section-' | append: section.id | append: '-padding'

  assign aos_id = section_id | append: '--aos'
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign container = section.settings.container | default: 'container'
  assign collection = section.settings.collection | default: false
  assign collection_products_count = section.settings.collection.products_count | default: 0
  assign collection_products_exceeded = false
  assign collection_limit = section.settings.limit | default: 3
  assign view_all = section.settings.view_all | default: false

  if section.settings.anchor_id != blank
    assign section_id = section.settings.anchor_id
  endif

  if collection_limit > collection_products_count
    assign collection_products_exceeded = true
  endif

-%}

{%- style -%}

  {% if background_colour != blank %}
    #shopify-section-{{ section.id }} {
      background: rgba(var(--theme-colour-{{ background_colour }}), 1);
      {% case background_colour %}
        {% when 'orange' %}
          color: rgba(var(--theme-colour-black), 1);
        {% when 'white' %}
          color: rgba(var(--theme-colour-black), 1);
        {% else %}
          color: rgba(var(--theme-colour-white), 1);
      {% endcase %}
    }
  {% endif %}

  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 992px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}

<link rel="stylesheet" href="{{ 'section-featured-collection.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-featured-collection.css' | asset_url | stylesheet_tag }}</noscript>

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: 'col-12 col-lg-10 offset-lg-1', container: container %}

    <div class="{{ section_name }}__layout grid grid--{{ layout }}" id="{{ aos_id }}" role="list">

      {% if collection_products_count > 0 %}
        {% for item in featured_collection.products limit: collection_limit %}

            {% assign item_id = 'card-product' | append: '--' | append: item.id | append: '--' | append: forloop.index %}
            <div class="{{ section_name }}__item grid__item" data-index="{{ forloop.index }}">
              {% render 'card-product', card_product: item, id: item_id %}
            </div>

        {% endfor %}
      {% endif %}

    </div>

    {% if view_all and collection_link != blank %}
      <div class="{{ section_name }}__cta">
        {%
          render 'link',
          classes: 'featured-collection__cta-link',
          colour_theme: colour,
          link: collection_link,
          style: 'button-primary',
          title: 'View All'
        %}
      </div>
    {% endif %}

  {% render 'bs-container', state: 'closed', container: container %}
</div>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section section--featured-collection",
  "settings": [
    {
			"content": "Content",
			"type": "header"
		},
    {
      "label": "Collection",
      "type": "collection",
      "id": "collection"
    },
    {
      "label": "Limit",
      "type": "range",
      "min": 2,
      "max": 9,
      "step": 1,
      "default": 3,
      "id": "limit"
    },
    {
      "label": "Enable View All",
      "type": "checkbox",
      "default": true,
      "id": "view_all"
    },
    {
			"content": "Layout",
			"type": "header"
		},
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" }
		  ],
		  "default": "black",
		  "id": "background"
		},
    {
      "label": "Container",
      "type": "select",
      "options": [
        { "label": "Static", "value": "container" },
        { "label": "Fluid", "value": "container-fluid" },
        { "label": "Full Width", "value": "full-width" }
      ],
      "default": "container",
      "id": "container"
    },
    {
			"content": "Padding",
			"type": "header"
		},
		{
			"label": "Top Padding",
			"type": "range",
			"min": 0,
			"max": 120,
			"step": 4,
			"unit": "px",
			"default": 36,
      "id": "padding_top"
		},
		{
			"label": "Bottom Padding",
			"type": "range",
			"min": 0,
			"max": 120,
			"step": 4,
			"unit": "px",
			"default": 36,
      "id": "padding_bottom"
		},
    {
			"content": "Anchor",
			"type": "header"
		},
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
