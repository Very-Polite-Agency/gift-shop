{%- liquid

  assign section_name = 'policy-privacy'
  assign section_id = section_name | append: '--' | append: section.id

  assign background_colour = section.settings.background | default: ''
  assign content = shop.privacy_policy.body | default: ''
  assign title = shop.privacy_policy.title | default: ''

-%}

{% if background_colour != blank %}
  {%- style -%}

    #shopify-section-{{ section.id }} {
      background: rgba(var(--theme-colour-{{ background_colour }}), 1);
      {% case background_colour %}
        {% when 'orange' %}
          color: rgba(var(--theme-colour-black), 1);
        {% when 'white' %}
          color: rgba(var(--theme-colour-black), 1);
        {% else %}
          color: rgba(var(--theme-colour-white), 1);
      {% endcase %}
    }

  {%- endstyle -%}
{% endif %}

<div class="{{ section_name }}__main">
  <div class="{{ section_name }}__content">

    <h1>{{ title }}</h1>
    <div>{{ content }}</div>

  </div>
</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% schema %}
  {
    "name": "Privacy Policy",
    "tag": "div",
    "class": "policy policy-privacy",
    "settings": [
      {
        "content": "Layout",
        "type": "header"
      },
      {
		    "label": "Background",
		    "type": "select",
		    "options": [
          { "label": "Black", "value": "black" },
			    { "label": "White", "value": "white" }
		    ],
		    "default": "black",
		    "id": "background"
		  },
      {
        "label": "Container",
        "type": "select",
        "options": [
          { "label": "Static", "value": "container" },
          { "label": "Fluid", "value": "container-fluid" },
          { "label": "Full Width", "value": "full-width" }
        ],
        "default": "container",
        "id": "container"
      }
    ],
	  "blocks": []
  }
{% endschema %}
